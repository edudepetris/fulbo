.user-profile
  .container
    .span11.offset.well
      %legend= t('.title')

      = form_for @sport_center, url: sport_center_path(@sport_center) do |f|
        = errors_for(@sport_center).html_safe

        .well.pull-right.img-polaroid
          .img-polaroid.pull-right
            = f.file_field :avatar
            = f.hidden_field :avatar_cache
            = rem_avatar_section(f)

          = avatar_2(f, @profile)

        = render  "data", :f => f

        %div
          %button.btn.btn-info
            .btn-block.pull-rigth{ :href => f.submit }= t('.submit')
